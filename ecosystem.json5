{
  "apps": [{
    "name"  : "I dont forget",
    "script": "src/i-dont-forget",
    "env_production": {
      NODE_ENV: "production",
    },
  }],
  "deploy": {
    "production": {
      "user"       : "pm2",
      "host"       : "sigsev.io",
      "ref"        : "origin/master",
